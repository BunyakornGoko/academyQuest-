<% content_for :title, "Quests" %>

<div class="w-full bg-blue-50">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-blue-100 mb-5 text-blue-700 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center p-6 bg-blue-800 text-white rounded-lg mb-6">
    <h1 class="font-bold text-4xl">My Academy Quest</h1>
    <div class="flex gap-2">
      <%= link_to "Brag", brag_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium shadow-md" %>
      <%= link_to "New quest", new_quest_path, class: "rounded-md px-3.5 py-2.5 bg-blue-500 hover:bg-blue-400 text-white block font-medium shadow-md" %>
    </div>
  </div>

  <div id="quests" class="min-w-full divide-y divide-blue-200 space-y-5 p-4 bg-white rounded-lg shadow-md">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0 hover:bg-blue-50 p-4 rounded-lg transition-colors">
          <%= render quest %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", quest, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-blue-200 text-blue-800 inline-block font-medium" %>
            <%= link_to "Edit", edit_quest_path(quest), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-blue-200 text-blue-800 inline-block font-medium" %>
            <%= button_to "Destroy", quest, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-blue-800">No quests found.</p>
    <% end %>
  </div>
</div>
